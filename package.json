{
	"name": "express-pug-boilerplate",
	"version": "1.0.0",
	"description": "A boilertplate template for express applications with typescript support",
	"main": "dist/app.js",
	"scripts": {
		"build": "tsc --project tsconfig.production.json && gulp",
		"build:assets": "gulp",
		"build:ts": "tsc && tsc-alias",
		"clean": "rimraf ./dist ./node_modules",
		"dev": "nodemon",
		"lint": "eslint --cache --ext .ts --ignore-path .eslintignore src/",
		"lint:scss": "stylelint ./design/**/*.scss",
		"postbuild": "tsc-alias",
		"prepare": "test -d node_modules/husky && husky install",
		"start": "node dist/app.js",
		"test": "mocha",
		"watch:assets": "gulp watch"
	},
	"keywords": [
		"express",
		"typescript",
		"boilerplate",
		"starter",
		"template",
		"pug"
	],
	"author": "Marco Schuster",
	"license": "Zlib",
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"body-parser": "1.20.1",
		"cookie-parser": "1.4.6",
		"cors": "2.8.5",
		"dotenv": "16.0.3",
		"express": "4.18.2",
		"express-rate-limit": "6.7.0",
		"pino": "8.9.0",
		"pino-pretty": "9.2.0",
		"pug": "3.0.2",
		"request-ip": "3.3.0"
	},
	"devDependencies": {
		"@picocss/pico": "1.5.7",
		"@types/chai": "4.3.4",
		"@types/connect-livereload": "0.6.0",
		"@types/cookie-parser": "1.4.3",
		"@types/cors": "2.8.13",
		"@types/express": "4.17.17",
		"@types/gulp": "4.0.10",
		"@types/livereload": "0.9.2",
		"@types/mocha": "10.0.1",
		"@types/node": "18.11.19",
		"@types/request-ip": "0.0.37",
		"@typescript-eslint/eslint-plugin": "5.51.0",
		"@typescript-eslint/parser": "5.51.0",
		"chai": "4.3.7",
		"connect-livereload": "0.6.1",
		"eslint": "8.34.0",
		"eslint-config-prettier": "8.6.0",
		"eslint-import-resolver-alias": "1.1.2",
		"eslint-import-resolver-node": "0.3.7",
		"eslint-import-resolver-typescript": "^3.5.3",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-unicorn": "45.0.2",
		"eslint-plugin-unused-imports": "2.0.0",
		"gulp": "4.0.2",
		"gulp-autoprefixer": "8.0.0",
		"gulp-concat": "2.6.1",
		"gulp-if": "3.0.0",
		"gulp-plumber": "1.2.1",
		"gulp-sass": "5.1.0",
		"gulp-sourcemaps": "3.0.0",
		"gulp-strip-debug": "4.0.0",
		"gulp-uglify": "3.0.2",
		"husky": "8.0.3",
		"lint-staged": "13.1.2",
		"livereload": "0.9.3",
		"mocha": "10.2.0",
		"nodemon": "2.0.20",
		"prettier": "2.8.3",
		"pug-lint": "^2.6.0",
		"rimraf": "4.1.2",
		"sass": "1.58.0",
		"stylelint": "14.16.1",
		"stylelint-config-prettier-scss": "0.0.1",
		"stylelint-config-standard-scss": "6.1.0",
		"ts-node": "10.9.1",
		"tsc-alias": "^1.8.2",
		"tsconfig-paths": "^4.1.2",
		"typescript": "4.9.5"
	},
	"lint-staged": {
		"js/**/*.js": "prettier --write",
		"src/**/*.ts": "eslint",
		"design/**/*.scss": "stylelint",
		"views/**/*.pug": "pug-lint"
	}
}
