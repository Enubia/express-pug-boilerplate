{
  "name": "express-ts-boilerplate",
  "version": "1.0.0",
  "description": "A boilertplate template for express applications with typescript support",
  "main": "dist/app.js",
  "scripts": {
    "build:all": "npm run build:ts && npm run build:assets",
    "build:assets": "gulp",
    "build:ts": "tsc",
    "clean": "rimraf ./dist ./coverage ./node_modules",
    "dev": "nodemon",
    "lint": "eslint --cache --ext .ts --ignore-path .eslintignore src/",
    "lint:scss": "stylelint ./design/**/*.scss",
    "start": "node dist/app.js",
    "prepare": "test -d node_modules/husky && husky install || echo \"husky is not installed\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "gulp watch"
  },
  "keywords": [
    "express",
    "typescript",
    "boilerplate",
    "starter",
    "template"
  ],
  "author": "Marco Schuster",
  "license": "Zlib",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "body-parser": "1.20.1",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.0.3",
    "express": "4.18.2",
    "pino": "8.8.0",
    "pino-pretty": "9.1.1",
    "pug": "3.0.2",
    "request-ip": "3.3.0"
  },
  "devDependencies": {
    "@picocss/pico": "1.5.7",
    "@types/connect-livereload": "0.6.0",
    "@types/cookie-parser": "1.4.3",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.16",
    "@types/gulp": "4.0.10",
    "@types/livereload": "0.9.2",
    "@types/node": "18.11.18",
    "@types/request-ip": "0.0.37",
    "@typescript-eslint/eslint-plugin": "5.49.0",
    "@typescript-eslint/parser": "5.54.0",
    "connect-livereload": "0.6.1",
    "eslint": "8.33.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-import-resolver-node": "0.3.7",
    "eslint-import-resolver-typescript": "3.5.3",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-unicorn": "45.0.2",
    "eslint-plugin-unused-imports": "2.0.0",
    "gulp": "4.0.2",
    "gulp-autoprefixer": "8.0.0",
    "gulp-concat": "2.6.1",
    "gulp-if": "3.0.0",
    "gulp-plumber": "1.2.1",
    "gulp-sass": "5.1.0",
    "gulp-sourcemaps": "3.0.0",
    "gulp-strip-debug": "4.0.0",
    "gulp-uglify": "3.0.2",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "livereload": "0.9.3",
    "nodemon": "2.0.20",
    "prettier": "2.8.3",
    "rimraf": "4.1.2",
    "sass": "1.58.0",
    "stylelint": "14.16.1",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard-scss": "6.1.0",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "lint-staged": {
    "src/**/*.ts": "eslint",
    "design/**/*.scss": "stylelint"
  }
}
