{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "lib": [
            "ES2020",
        ],
        "outDir": "dist",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": false
    },
    "ts-node": {
        "files": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "gulpfile.js"
    ]
}