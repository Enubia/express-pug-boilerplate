{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "outDir": "dist",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@config/*": ["src/config/*"],
            "@handler/*": ["src/handler/*"],
            "@helper/*": ["src/helper/*"]
        }
    },
    "files": [
        "lib.shim.d.ts"
    ],
    "ts-node": {
        "files": true
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}