    script.
        documentReady(() => {
            const modal = new Pico.Modal();

            const open = document.querySelector('#open');
            const close = document.querySelector('#close');
            const cancel = document.querySelector('#cancel');
            const confirm = document.querySelector('#confirm');

            open.addEventListener('click', event => modal.toggleModal(event));
            close.addEventListener('click', event => modal.toggleModal(event));
            cancel.addEventListener('click', event => modal.toggleModal(event));
            confirm.addEventListener('click', event => modal.toggleModal(event));
        });